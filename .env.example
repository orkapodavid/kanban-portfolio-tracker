# ============================================
# Kanban Portfolio Tracker - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# --------------------------------------------
# Database Configuration (Optional)
# --------------------------------------------
# For future PostgreSQL integration
# Example: postgresql://username:password@localhost:5432/kanban_db
DATABASE_URL=

# --------------------------------------------
# Application Settings
# --------------------------------------------
# Environment: development, staging, production
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# --------------------------------------------
# External Services (Future Use)
# --------------------------------------------
# Add any API keys or external service credentials here
# Example:
# EMAIL_SERVICE_API_KEY=
# ANALYTICS_API_KEY=

# --------------------------------------------
# Security (Future Use)
# --------------------------------------------
# Session secret key for authentication
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=

# --------------------------------------------
# Logging
# --------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
